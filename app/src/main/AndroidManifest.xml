<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gi3.avisaux">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.AccueilActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.administrateur.AdminDashboardActivity" />
        <activity android:name=".activity.enseignant.EnsDashboardActivity" />
        <activity android:name=".activity.etudiant.StuDashboardActivity" />
        <activity android:name=".activity.administrateur.UserListActivity" />
        <activity android:name=".activity.administrateur.AddUserActivity" />
        <activity android:name=".activity.administrateur.AvisListActivity" />
        <activity android:name=".activity.ProfilActivity" />
        <activity android:name=".activity.enseignant.AvisListActivity" />
        <activity android:name=".activity.enseignant.AddAvisActivity" />
        <activity android:name=".activity.etudiant.AvisListEtudiantActivity"></activity>
    </application>

</manifest>